
.list-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.taskAndPro {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0 14rpx 20rpx;
}

